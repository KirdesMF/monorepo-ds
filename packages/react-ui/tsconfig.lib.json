{
  "extends": "@kirdes-org/config-typescript/lib.json",
  "include": ["src/lib/**/*.ts", "src/lib/**/*.tsx", "src/index.ts"],
  "exclude": ["node_modules", "dist", "src/main.ts", "src/App.tsx", "src/components/**"],
  "compilerOptions": {
    "target": "ESNext", // Specify ECMAScript target version
    "module": "ESNext", // Use ESNext modules for tree-shaking
    "declaration": true, // Generate declaration files (.d.ts)
    "declarationMap": true, // Generate source maps for declarations
    "outDir": "dist", // Output directory
    "jsx": "react-jsx", // JSX runtime (use 'react' if not using React 17+)
    "strict": true, // Enable strict type-checking
    "moduleResolution": "node", // Module resolution strategy
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES Modules
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in imports
    "skipLibCheck": true, // Skip type checking of declaration files
    "isolatedModules": true, // Ensure each file is treated as a separate module
    "resolveJsonModule": true, // Allow importing JSON modules
    "noEmit": false, // Emit compiled files
    "allowSyntheticDefaultImports": true // Allow default imports from modules with no default export
  }
}
